<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/black"
    >
    
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        
        <TextView 
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dimmer Light"
            android:singleLine="true"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        
        <TextView 
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 ZWave Dimmer"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:alpha="0.5"
            />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Monday, 15 Aug 2013 15:44:22"
            android:singleLine="true"
            android:alpha="0.3"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="right"
            >

            <include android:id="@+id/propBattery" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propLuminance" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propHumidity" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propTemperature" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propMotionDetect" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propDoorWindow" layout="@layout/widget_fragment_property_small"></include>

            <include android:id="@+id/propWatt" layout="@layout/widget_fragment_property"></include>

            <include android:id="@+id/propColorHsb" layout="@layout/widget_fragment_property_color"></include>

            <include android:id="@+id/propLevel" layout="@layout/widget_fragment_property"></include>

        </LinearLayout>
        
    </LinearLayout>

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="4dp"
        />

</RelativeLayout>
